
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read their own profile, but not write to it from the client.
    match /userProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // All writes must go through the Cloud Function
    }
    
    // Allow users to read and write to their own user data subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
