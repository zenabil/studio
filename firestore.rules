rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/config/admin).data.uid;
    }

    // A user can create their own user document
    match /users/{userId} {
      allow create: if isOwner(userId);
      // Only the admin can read other user docs
      allow read: if isOwner(userId) || isAdmin();
    }
    
    match /config/admin {
      // Anyone can read the admin config to check who is the admin
      allow read: if true;
      // Only allow creation if the document doesn't exist yet (i.e., first user sign-up)
      allow create: if !exists(/databases/$(database)/documents/config/admin);
      // No one can update or delete the admin document
      allow update, delete: if false;
    }

    // Generic rule for user-partitioned data
    match /{collection}/{userId}/{docId} {
      allow read, write: if isOwner(userId);
      // Admin can read data from any user's collection but cannot write to it
      allow read: if isAdmin();
    }
  }
}
