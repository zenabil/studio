
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rule for the userProfiles collection
    match /userProfiles/{userId} {
      // Any authenticated user can read any profile (e.g., to get admin contact info).
      allow read: if isSignedIn();
      
      // A user can only create their own profile.
      allow create: if request.auth.uid == userId;
      
      // A user can only update their own profile.
      // This rule allows updates and adding new fields to their own profile.
      allow update: if request.auth.uid == userId;
    }

    // Rule for all user-specific subcollections (products, customers, etc.)
    match /users/{userId}/{document=**} {
      // A user can perform any action (read, write) only on documents within their own folder.
      allow read, write: if request.auth.uid == userId;
    }
  }
}
