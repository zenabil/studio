rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user owns the data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for user-specific data collections
    match /users/{userId} {
      // A user can only access their own user document, but we don't have one.
      // This is a placeholder for future profile info.
      allow read, write: if isOwner(userId);

      match /products/{productId} {
        allow read, write: if isOwner(userId);
      }

      match /customers/{customerId} {
        allow read, write: if isOwner(userId);
      }
      
      match /sales/{saleId} {
        allow read, write: if isOwner(userId);
      }

      match /bakeryOrders/{orderId} {
        allow read, write: if isOwner(userId);
      }
      
      match /suppliers/{supplierId} {
        allow read, write: if isOwner(userId);
      }

      match /supplierInvoices/{invoiceId} {
        allow read, write: if isOwner(userId);
      }
      
      match /expenses/{expenseId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
