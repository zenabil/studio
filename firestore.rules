
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This single rule now governs all user-specific data, including their profile.
    // A user can read and write any document within their own /users/{userId} folder.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    match /userProfiles/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
