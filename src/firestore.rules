
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isApproved() {
      return getUserProfile(request.auth.uid).status == 'approved';
    }

    function isAdmin() {
      return getUserProfile(request.auth.uid).isAdmin == true;
    }

    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId) && isApproved();
    }

    match /userProfiles/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn() && isAdmin();
      allow create: if isSignedIn() && request.resource.data.email == request.auth.token.email;
      allow update: if isSignedIn() && isAdmin();
    }
  }
}
