
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isAdmin() {
      // Check if the user's own profile exists and they are an admin.
      return exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) && 
             getUserProfile(request.auth.uid).isAdmin == true;
    }

    // Rules for user-specific data subcollections
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for the global userProfiles collection
    match /userProfiles/{userId} {
      // Any signed-in user can read their own profile.
      allow get: if isOwner(userId);
      
      // Only admins can list all profiles.
      allow list: if isSignedIn() && isAdmin();
      
      // Anyone can create a user profile (signup), but they can't set their own status or admin rights initially.
      // The status will be 'approved' by default from the cloud function.
      allow create: if request.resource.data.email == request.auth.token.email || request.auth == null;
      
      // Only admins can update profiles (e.g., to change status).
      allow update: if isSignedIn() && isAdmin();
    }
  }
}
